    <main>
        <div class="login-container">
            <div class="login" tabindex="0" onclick="location.href='/login';">Sign In</div>
        </div>
        <div class="container">
            <div class="logo-gift">
                <div class="logo">
                    <img src="/once-upon-a-wishlist-logo.png">
